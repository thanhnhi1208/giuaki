#include<stdio.h>
int a[100];
int n;
void nhapmang(int a[],int &n){
	do{
		printf("nhap n");
		scanf("%d",&n);
	}while(n<0||n>100);
	for(int i=0;i<n;i++){
		printf("a[%d]=	",i);
		scanf("%d",&a[i]);
	}
}

void xuatmang(int a[],int n){

	for(int i=0;i<n;i++){
			printf("%d	",a[i]);
	}
}
int tongchan(int a[], int n){	
	if(n==0)
	return 0;
	int t=tongchan(a,n-1);
	if(a[n-1]%2==0)
	t=a[n-1]+t;
	return t;
	}
int main() {
	int a[100];
	int n;
	nhapmang(a,n);
	xuatmang(a,n);
	int tong=tongchan(a,n);
	tongchan(a,n);
	printf("tong so chan=	%d",tong);
	return 0;
	
}
	
